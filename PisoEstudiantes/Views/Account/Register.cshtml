@using PisoEstudiantes.Models
@model RegisterViewModel
@{
    ViewBag.Title = "Registro";
}
@Styles.Render("~/Content/AccountViewModelStyle.css")
<h2 class="title">@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-8 registerContainer">
        <section id="registerForm">
            @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Usarás el correo con el que te registraste para inciar sesión</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <!-- Nombre -->
                <div class="form-group">
                    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                        @Html.LabelFor(m => m.Name, new { @class = "control-label bold" })
                    </div>
                    <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
                        <div class="input-group">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

    <!-- Apellidos -->
                <div class="form-group">
                    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                        @Html.LabelFor(m => m.Surname, new { @class = "control-label bold" })
                    </div>
                    <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
                        <div class="input-group">
                            @Html.TextBoxFor(m => m.Surname, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Surname, "", new { @class = "text-danger" })
                    </div>
                </div>

    <!-- Email -->
                <div class="form-group">
                    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                        @Html.LabelFor(m => m.Email, new { @class = "control-label bold" })
                    </div>
                    <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
                        <div class="input-group">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

    <!-- Usuario -->
                @*<div class="form-group">
                    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                        @Html.LabelFor(m => m.Username, new { @class = "control-label bold" })
                    </div>
                    <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
                        <div class="input-group">
                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                    </div>
                </div>*@
                
    <!-- Teléfono -->
                <div class="form-group">
                    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                        @Html.LabelFor(m => m.Phone, new { @class = "control-label bold" })
                    </div>
                    <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
                        <div class="input-group">
                            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                    </div>
                </div>

    <!-- Contraseña -->
                <div class="form-group">
                    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                        @Html.LabelFor(m => m.Password, new { @class = "control-label bold" })
                    </div>
                    <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
                        <div class="input-group">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

    <!-- Repetir contraseña -->
                <div class="form-group">
                    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label bold" })
                    </div>
                    <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
                        <div class="input-group">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>

    <!-- Botón de registrar-->
                <div class="form-group">
                    <input type="submit" class="btn btn-primary btn-lg buttonRegister" value="Registrarse" />
                </div>
            }
        </section>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
